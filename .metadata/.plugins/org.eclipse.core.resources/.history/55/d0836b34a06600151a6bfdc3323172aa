package gramy;

import java.awt.Color;
import java.awt.Font;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextArea;

//okno podsumowuj¹ce
public class Wynik extends JFrame{
	JLabel result,points;
	JTextArea summary ,summaryComputer ;
	public Wynik(){
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLayout(null);
		getContentPane().setBackground(Color.BLUE);
		double mojepkt = Stage.GUN_LASER + (2.1*Stage.GUN_ION)+(4*Stage.DZIALO_GAUSSA)+(2.3*Stage.SHIP_CRUISER)+(5*Stage.SHIP_GRENADE)+(15*Stage.SHIP_STAR_DEATH) +(0.01*Stage.LVL_FIGHT)*(0.01*Stage.LVL_PROTECTION) *(Stage.GUN_LASER + (2.1*Stage.GUN_ION)+(4*Stage.DZIALO_GAUSSA)+(2.3*Stage.SHIP_CRUISER)+(5*Stage.SHIP_GRENADE)+(15*Stage.SHIP_STAR_DEATH));
		Font czcionka = new Font("serif",Font.BOLD,50);
		Font czcionkaa = new Font("serif",Font.BOLD,20);
			//pkt ustawione na 1000- atakuj¹cy ma ich troche wiecej.
			if(mojepkt>1000){ 
			points = new JLabel("ZWYCIESTWO");
			points.setBounds(410,250,500,110);
			points.setForeground(Color.BLACK);
			points.setFont(czcionka);
			add(points);
			}else{
			result = new JLabel("PRZEGRANA");
			result.setBounds(410,250,500,110);
			result.setForeground(Color.BLACK);
			result.setFont(czcionka);
			add(result);
			}
			
			summary = new JTextArea("Obroñca :\nDzia³o laserowe "+Stage.GUN_LASER+"\nDzia³o jonowe "+Stage.GUN_ION+"\nDzia³o Gaussa "+Stage.DZIALO_GAUSSA+"\nKr¹¿ownik "+Stage.SHIP_CRUISER+"\nB¹bowiec "+Stage.SHIP_GRENADE+"\nGwiazda Œmierci "+Stage.SHIP_STAR_DEATH);
			summary.setOpaque(false);
			summary.setFont(czcionkaa);
			summary.setEditable(false);
			summary.setBounds(200,350,800,500);
			summary.setForeground(Color.WHITE);
			add(summary);
			
			summaryComputer = new JTextArea("Atakuj¹cy :\nKr¹¿ownik 100\nB¹bowiec 100\nGwiazda Œmierci 30");
			summaryComputer.setOpaque(false);
			summaryComputer.setFont(czcionkaa);
			summaryComputer.setEditable(false);
			summaryComputer.setBounds(800,350,800,500);
			summaryComputer.setForeground(Color.WHITE);
			add(summaryComputer);
			
			
			
			
			
			
		setBounds(0, 0, Stage.WIDTH , Stage.HEIGHT);
		setVisible(true);
			
		}	
	}


