import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class Obrazki extends JPanel{
	
	Image img,img1,imgkrysztal,imgmetal,imgdeuter,metall,kristall,deuterium;
//	Image planeta;
	public Obrazki(){
		/*
