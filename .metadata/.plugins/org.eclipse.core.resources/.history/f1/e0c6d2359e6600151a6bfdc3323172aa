package gramy;

import static java.lang.Math.pow;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComponent;

public class BudynkiPrzyciski extends JComponent {
	JButton lvlLab,lvlShiyard,lvlTerrafometr; 
	
	
	ActionListener al = new ActionListener(){
		public void actionPerformed(ActionEvent e){
			Object source = e.getSource();
			if(Stage.AKTUALNY_LVL<Stage.MAX_LVL){
				if(source == lvlShiyard&& Stage.METAL>BudynkiOpisy.COST_SHIPYARD_METAL*pow(1.5,Stage.LVL_STOCZNIA-1) && Stage.KRYSZTAL > BudynkiOpisy.COST_SHIPYARD_KRYSZTAL*pow(1.5,Stage.LVL_STOCZNIA-1)){
					Stage.METAL-=BudynkiOpisy.COST_SHIPYARD_METAL*pow(1.5,Stage.LVL_STOCZNIA-1);
					Stage.KRYSZTAL -= BudynkiOpisy.COST_SHIPYARD_KRYSZTAL*pow(1.5,Stage.LVL_STOCZNIA-1);
					Stage.LVL_STOCZNIA+=1;
					BudynkiOpisy.stoczniaKoszty.setText("Potrzebne surowce: Metal "+(int)(BudynkiOpisy.COST_SHIPYARD_METAL*pow(1.5,Stage.LVL_STOCZNIA-1))+" Krysztal "+(int)( BudynkiOpisy.COST_SHIPYARD_KRYSZTAL*pow(1.5,Stage.LVL_STOCZNIA-1)));
					BudynkiOpisy.stocznialvl.setText("Stocznia " + Stage.LVL_STOCZNIA+" lvl");
					Stage.AKTUALNY_LVL +=1 ;
				}
				if(source == lvlLab && Stage.METAL>BudynkiOpisy.COST_LAB_METAL*pow(1.6,Stage.LVL_LABORATORIUM-1) && Stage.KRYSZTAL > BudynkiOpisy.COST_LAB_KRYSZTAL*pow(1.5,Stage.LVL_LABORATORIUM-1)){
					Stage.METAL-=BudynkiOpisy.COST_LAB_METAL*pow(1.6,Stage.LVL_LABORATORIUM-1);
					Stage.KRYSZTAL-=BudynkiOpisy.COST_LAB_KRYSZTAL*pow(1.5,Stage.LVL_LABORATORIUM-1);
					Stage.LVL_LABORATORIUM+=1;
					BudynkiOpisy.labKoszty.setText("Potrzebne surowce: Metal "+(int)(BudynkiOpisy.COST_LAB_METAL*pow(1.6,Stage.LVL_LABORATORIUM-1) )+" Krysztal "+(int)(BudynkiOpisy.COST_LAB_KRYSZTAL*pow(1.5,Stage.LVL_LABORATORIUM-1)));
					BudynkiOpisy.lablvl.setText("Labolatorium " + Stage.LVL_LABORATORIUM+" lvl");
					Stage.AKTUALNY_LVL +=1 ;
				}

			}
			
				if(source == lvlTerrafometr && Stage.METAL>BudynkiOpisy.COST_TERRAFOMETR_METAL*pow(1.6,Stage.LVL_TERRAFOMETR-1) && Stage.KRYSZTAL > BudynkiOpisy.KOSZTY_TERRAFOMETR_KRYSZTAL*pow(1.5,Stage.LVL_TERRAFOMETR-1) ){
					Stage.METAL -= BudynkiOpisy.COST_TERRAFOMETR_METAL*pow(1.6,Stage.LVL_TERRAFOMETR-1);
					Stage.KRYSZTAL -=BudynkiOpisy.KOSZTY_TERRAFOMETR_KRYSZTAL*pow(1.5,Stage.LVL_TERRAFOMETR-1);
					Stage.LVL_TERRAFOMETR+=1;
					BudynkiOpisy.terrafometrKoszty.setText("Potrzebne surowce: Metal "+(int)(BudynkiOpisy.COST_TERRAFOMETR_METAL*pow(1.6,Stage.LVL_TERRAFOMETR-1) )+" Krysztal "+(int)(BudynkiOpisy.KOSZTY_TERRAFOMETR_KRYSZTAL*pow(1.5,Stage.LVL_TERRAFOMETR-1)));
					BudynkiOpisy.terrafometrlvl.setText("Terrafometr " + Stage.LVL_TERRAFOMETR +" lvl");
					Stage.MAX_LVL += 10 ;
					OpisyPrzeglad.building.setMaximum(Stage.MAX_LVL);
					
				}
			
				OpisyPrzeglad.building.setValue(Stage.AKTUALNY_LVL);
			
				
			}
			
		};
	
	public BudynkiPrzyciski(){
		lvlLab = new JButton("Buduj");
		lvlLab.setBounds(700, 180, 100, 20);
		lvlLab.addActionListener(al);
		add(lvlLab);
		

		lvlShiyard = new JButton("Buduj");
		lvlShiyard.setBounds(700,300,100,20);
		lvlShiyard.addActionListener(al);
		add(lvlShiyard);
		
		lvlTerrafometr = new JButton("Buduj");
		lvlTerrafometr.setBounds(700, 420, 100, 20);
		lvlTerrafometr.addActionListener(al);
		add(lvlTerrafometr);
		
		
		setBounds(0,0,Stage.SZEROKOSC,Stage.HEIGHT);
		setVisible(true);
		
	}

}
