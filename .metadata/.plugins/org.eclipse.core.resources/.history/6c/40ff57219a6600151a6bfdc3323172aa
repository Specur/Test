			 	Stage.DEUTER+=1+(10*Stage.LVL_DEUTER*pow(1.1,Stage.LVL_DEUTER)+0.05*Stage.LVL_WYDOBYWCZA*(1+(10*Stage.LVL_DEUTER*pow(1.1,Stage.LVL_DEUTER))));
