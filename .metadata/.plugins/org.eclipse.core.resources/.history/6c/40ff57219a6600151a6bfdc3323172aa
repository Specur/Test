			 	Stage.KRYSZTAL+= 1+(20*Stage.LVL_KRYSZTAL*pow(1.1,Stage.LVL_KRYSZTAL)+0.05*Stage.LVL_WYDOBYWCZA*(1+(20*Stage.LVL_KRYSZTAL*pow(1.1,Stage.LVL_KRYSZTAL))));
